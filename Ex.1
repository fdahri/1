#include <stdio.h>
#include <math.h>

int main() {
    int choice;
    float num1, num2, result, sum=0, count=0;

    printf("Select an operation:\n");
    printf("1. Addition\n2. Subtraction\n3. Multiplication\n4. Division\n5. Square root\n6. Power\n7. Calculate average\n");
    scanf("%d", &choice);

    switch(choice) {
        case 1:
            printf("Enter two numbers:\n");
            scanf("%f %f", &num1, &num2);
            result = num1 + num2;
            printf("Result: %.2f", result);
            break;
        case 2:
            printf("Enter two numbers:\n");
            scanf("%f %f", &num1, &num2);
            result = num1 - num2;
            printf("Result: %.2f", result);
            break;
        case 3:
            printf("Enter two numbers:\n");
            scanf("%f %f", &num1, &num2);
            result = num1 * num2;
            printf("Result: %.2f", result);
            break;
        case 4:
            printf("Enter two numbers:\n");
            scanf("%f %f", &num1, &num2);
            result = num1 / num2;
            printf("Result: %.2f", result);
            break;
        case 5:
            printf("Enter a number:\n");
            scanf("%f", &num1);
            result = sqrt(num1);
            printf("Result: %.2f", result);
            break;
        case 6:
            printf("Enter a number:\n");
            scanf("%f", &num1);
            printf("Enter the power:\n");
            scanf("%f", &num2);
            result = pow(num1, num2);
            printf("Result: %.2f", result);
            break;
        case 7:
            printf("Enter numbers to calculate average (enter any character to exit):\n");
            while(scanf("%f",&num1)==1) {
                sum += num1;
                count++;
            }
            result = sum/count;
            printf("Result: %.2f", result);
            break;
        default:
            printf("Invalid choice");
    }

    return 0;
}
